@model ContactFormViewModel

<div class="contact-form">
    <div class="contact-form-img">
        <img src="images/placeholders/1920x300.svg" />
    </div>
    <div class="container">
        <form asp-action="Index" asp-controller="Contacts" method="post" novalidate>
        <div asp-validation-summary=ModelOnly class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="Name" class="form-label">Name</label>
            <input asp-for="Name" class="form-control" onkeyup="validateText(event)" />
            <span asp-validation-for="Name" class="small text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" type="email" class="form-control" onkeyup="validateEmail(event)" />
            <span asp-validation-for="Email" class="small text-danger"></span>
        </div>
        <div class="message-box">
            <label asp-for="Message" class="form-label">Message</label>
            <textarea asp-for="Message" class="form-control" onkeyup="validateText(event)"></textarea>
            <span asp-validation-for="Message" class="small text-danger"></span>
        </div>
        <div class="contact-form-button">
            <button type="submit" class="btn btn-theme">SUBMIT</button>
        </div>
        </form>
    </div>
    <div>
        <iframe class="google-map" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2127.405145087933!2d14.221967305665435!3d57.77750056763131!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x465a6d72a6436563%3A0xdcc3f862e05d1847!2sLidl!5e0!3m2!1ssv!2sse!4v1667942125345!5m2!1ssv!2sse" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"> </iframe>
    </div>
</div>
